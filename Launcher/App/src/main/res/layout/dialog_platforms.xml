<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <android.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="@string/settings_platforms"/>

    <LinearLayout
        android:id="@+id/layout_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_platform_android"/>

        <Switch
            android:id="@+id/checkbox_android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Android apps"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:trackTint="@color/switch_track_color"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_psp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_platform_psp"/>

        <Switch
            android:id="@+id/checkbox_psp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sony Playstation Portable (PPSSPP)"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:trackTint="@color/switch_track_color"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_vr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_platform_vr"/>

        <Switch
            android:id="@+id/checkbox_vr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Virtual Reality"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:trackTint="@color/switch_track_color"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>
</LinearLayout>